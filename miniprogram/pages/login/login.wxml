<!--miniprogram/pages/login/login.wxml-->
<view class="wrap">
  <view class="content">
    <view class="login">
      <input class="login-input name" auto-focus bindinput="handleNameInout" placeholder="铲屎官名"/>
      <input class="login-input password" auto-focus bindinput="handlePwInout" placeholder="密码"/>
      <button class="login-btn btn" bind:tap="handleLogin">登录</button>
      <button class="register-btn btn" bind:tap="goToRegister">注册</button>
    </view>
  </view>
</view>

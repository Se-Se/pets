/* miniprogram/pages/register/register.wxss */

page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.wrap {
  width: 100%;
  height: 100%;
 
}

.wrap .canvas-sec {
  width: 100%;
  height: 100%;
  position: relative;
  background: linear-gradient(to top right, #39dcc6, #FFEB3B, #4a8dc3);
}

.canvas-sec .btn-area{
position: absolute;
z-index: 2;
top: 50%;
left: 50%;
transform: translate(-50%,-50%);
}
.canvas-sec .btn-area .btn{
background-color: rgba(175, 230, 230,0.1);
}
.wrap .input-sec{
  position: fixed;
  z-index: 10;
  width: 80%;
  top: 200rpx;
  left: 50%;
  transform: translate(-50%);
}
.wrap .input-sec input{
  height: 100rpx;
  margin-bottom: 20rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 10rpx 30rpx rgba(58, 58, 58, 0.15);
  background-color: rgba(175, 230, 230,0.1);
  border-radius: 10rpx;
  color: rgb(14, 13, 13);
  place-content: rgb(31, 30, 30);
}
.phcolor{
  color: #4d4e4e;
}